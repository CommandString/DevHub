{% extends "templates/base.twig" %}

{% block head %}
{{ entrypoint('questions')|raw }}
<title>Developer Hub</title>
{% endblock %}

{% block body %}
<div class="ui inverted attached segment" id="main">
    <div class="ui wide container">
        <div id="dimmer" class="ui dimmer">
            <div class="ui text violet loader">Searching...</div>
        </div>
        <div id="search" class="ui fluid icon input">
            <input type="text" value="{{ query }}" placeholder="Search Questions...">
            <i class="search link icon"></i>
        </div>
        <div class="ui divider"></div>
        <a href="/questions/create"><div id="post" class="ui large fluid violet button"><i class="plus icon"></i> Create Question</div></a>
        <div class="ui divider mb-0"></div>
        <div id="questions" class="ui inverted relaxed divided selection list"></div>
    </div>
</div>
{% endblock %}
